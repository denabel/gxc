citHeader("To cite gxc in publications use:")

bibentry(
  key = "gxc",
  bibtype  = "Manual",
  title    = "gxc: Easy Access to Earth Observation Data",
  author = c(person("Dennis", "Abel"), person("Stefan", "Juenger")),
  note  = "R package version 0.1.0",
  year     = "2025",
  url      = "https://github.com/denabel/gxc"
)
